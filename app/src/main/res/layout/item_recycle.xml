<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemTitleTv"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/col_no_black"
        android:maxLines="1"
        android:text="Title Title Title Title Title Title Title Title Title "
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/itemDescTv"
        app:layout_constraintTop_toBottomOf="@+id/itemTitleTv"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/col_no_no_black"
        android:maxLines="2"
        android:text="Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc Desc "
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/itemDescTv"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textColor="@color/col_no_no_black"
                android:text="155"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                app:srcCompat="@drawable/ic_thumb_up"
                android:layout_marginLeft="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/col_no_no_black"
                android:text="52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/ic_sms"
                android:layout_marginLeft="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/col_no_no_black"
                android:text="1582"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/ic_visibility"
                android:layout_marginLeft="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        app:layout_constraintEnd_toEndOf="@+id/itemDescTv"
        app:layout_constraintTop_toBottomOf="@+id/itemDescTv"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/col_no_no_black"
        android:layout_marginTop="10dp"
        android:text="08 May 2019"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>